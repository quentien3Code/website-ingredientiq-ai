# IngredientIQ Backend - Environment Variables Template
# Copy this file to .env and fill in your values
# NEVER commit the .env file to version control!

# ===================
# Django Settings
# ===================
DJANGO_SECRET_KEY=your-secret-key-here-generate-new-one
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,ingredientiq.ai,www.ingredientiq.ai

# ===================
# Railway Deployment (auto-set by Railway)
# ===================
# RAILWAY_PUBLIC_DOMAIN=your-app.up.railway.app
# PORT=8000

# ===================
# Email Configuration
# ===================
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# ===================
# AWS S3 Configuration
# ===================
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=your-bucket-name
AWS_S3_REGION_NAME=us-east-2
AWS_S3_CUSTOM_DOMAIN=https://your-bucket.s3.region.amazonaws.com
DEFAULT_FILE_STORAGE=storages.backends.s3boto3.S3Boto3Storage
AWS_DEFAULT_ACL=public-read
AWS_S3_URL_PROTOCOL=https
AWS_S3_USE_SSL=True
AWS_S3_VERIFY=True

# ===================
# OAuth Configuration
# ===================
SOCIAL_AUTH_GOOGLE_OAUTH2_KEY=your-google-client-id
SOCIAL_AUTH_GOOGLE_OAUTH2_SECRET=your-google-client-secret

SOCIAL_AUTH_FACEBOOK_KEY=your-facebook-app-id
SOCIAL_AUTH_FACEBOOK_SECRET=your-facebook-app-secret

SOCIAL_AUTH_APPLE_ID_CLIENT=your-apple-client-id
SOCIAL_AUTH_APPLE_ID_TEAM=your-apple-team-id
SOCIAL_AUTH_APPLE_ID_SECRET=your-apple-client-secret
SOCIAL_AUTH_APPLE_ID_SECRET_KEY=your-apple-key-id
SOCIAL_AUTH_APPLE_ID_SECRET_FILE=path_to_your_private_key.p8

Client_ID=your-google-client-id
secret=your-google-secret

# ===================
# External APIs
# ===================
USDA_API_KEY=your-usda-api-key
foursquare_api_key=your-foursquare-key
UNSPLASH_ACCESS_KEY=your-unsplash-key
OPENAI_API_KEY=your-openai-key

# ===================
# Stripe Configuration
# ===================
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key
STRIPE_MONTHLY_PRICE_ID=price_xxxxx
STRIPE_YEARLY_PRICE_ID=price_xxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxx
STRIPE_MONTHLY_DISCOUNTED_PRICE_ID=price_xxxxx

# ===================
# Twilio Configuration
# ===================
TWILIO_ACCOUNT_SID=your-twilio-sid
TWILIO_AUTH_TOKEN=your-twilio-token
TWILIO_PHONE_NUMBER=your-twilio-phone

# ===================
# Database Configuration (Railway PostgreSQL)
# ===================
# Railway automatically provides DATABASE_URL when you add PostgreSQL plugin
DATABASE_URL=postgres://user:pass@localhost:5432/dbname
POSTGRES_DB=foodai
POSTGRES_USER=foodai_user
POSTGRES_PASSWORD=your-secure-password

# ===================
# Google APIs
# ===================
GOOGLE_CUSTOM_SEARCH_ENGINE_ID=your-search-engine-id
GOOGLE_CUSTOM_SEARCH_API_KEY=your-api-key
YOUTUBE_API_KEY=your-youtube-api-key
